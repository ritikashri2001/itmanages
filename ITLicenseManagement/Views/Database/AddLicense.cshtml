</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    
    function fnpro() {
        var x = parseInt($("#txtval1").val());

        function DaysFromMonths(numMonths) {


            var daysInEachMonth = [
                31,
                28,
                31,
                30,
                31,
                30,
                31,
                31,
                30,
                31,
                30,
                31
            ];

            let totalDays = 0;

            for (let i = 0; i < numMonths; i++) {
                totalDays += daysInEachMonth[i % 12];
            }

            return totalDays;
        }
        var v = parseInt($("#lisum").val());
        var numMonths = v;
        var totalDays = DaysFromMonths(numMonths);
        $("#numdays").html(totalDays);
        var fg = parseInt(totalDays);
        $("#NumberOfDays").val(fg);


        var a = x / totalDays;
        $("#divResult").html(a);
        var fg = parseInt(a);
        $("#RatePerday").val(fg);

        var b = a * totalDays;
        $("#divpro").html(b);
        var fg = parseInt(b);
        $("#ProrateForBilling").val(fg);

        //amount
        var c = parseInt($("#Uni").val());
        var d = c * b;
        $("#divUni").html(d);
        var fg = parseInt(d);
        $("#Ammount").val(fg);

        //Totalgst
        var e = (d * 9 / 100) + d
        $("#divGst").html(e);
        var fg = parseInt(e);
        $("#BillingAmmountWithGST").val(fg);

        //gst
        var f = e - d
        $("#total").html(f);
        var fg = parseInt(f);
        $("#GSTAmmount").val(fg);
         
        //Date
        function addDaysToCurrentDate(days) {
        var currentDate = new Date();
        var newDate = new Date(currentDate);
        newDate.setDate(currentDate.getDate() + days);
        var formattedNewDate = newDate.toDateString();
        return formattedNewDate;
    }
    var daysToAdd = totalDays;
        var newDate = addDaysToCurrentDate(daysToAdd);
    $("#edate").text(newDate);

    // Display the current date on page load
    $("#sdate").text(new Date().toDateString());

        console.log(newDate)

    }

    
    
</script>
